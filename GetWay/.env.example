# GetWay Mobile App Environment Configuration

# API Configuration
# For development, use one of these based on your setup:
# - Android Emulator: http://10.0.2.2:3000/api
# - iOS Simulator: http://localhost:3000/api  
# - Physical Device: http://YOUR_COMPUTER_IP:3000/api
EXPO_PUBLIC_API_BASE_URL=http://localhost:3000/api
EXPO_PUBLIC_API_TIMEOUT=10000

# App Configuration
EXPO_PUBLIC_APP_NAME=GetWay
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_APP_ENVIRONMENT=development

# Authentication Configuration
EXPO_PUBLIC_JWT_STORAGE_KEY=getway_auth_token
EXPO_PUBLIC_USER_STORAGE_KEY=getway_user_data
EXPO_PUBLIC_REFRESH_TOKEN_KEY=getway_refresh_token

# Demo Mode Configuration
EXPO_PUBLIC_ENABLE_DEMO_MODE=true
EXPO_PUBLIC_DEMO_FALLBACK=true

# Analytics and Monitoring (optional - for production)
EXPO_PUBLIC_ANALYTICS_ID=
EXPO_PUBLIC_SENTRY_DSN=
EXPO_PUBLIC_AMPLITUDE_API_KEY=

# Social Login (optional - for future implementation)
EXPO_PUBLIC_GOOGLE_CLIENT_ID=
EXPO_PUBLIC_FACEBOOK_APP_ID=

# Maps and Location Services (optional)
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=
EXPO_PUBLIC_MAPBOX_ACCESS_TOKEN=

# Push Notifications (optional)
EXPO_PUBLIC_FCM_SENDER_ID=
EXPO_PUBLIC_PUSH_NOTIFICATION_KEY=

# Feature Flags
EXPO_PUBLIC_ENABLE_LOCATION_TRACKING=true
EXPO_PUBLIC_ENABLE_OFFLINE_MODE=true
EXPO_PUBLIC_ENABLE_BIOMETRIC_AUTH=false
EXPO_PUBLIC_ENABLE_DARK_MODE=true

# Debug Configuration
EXPO_PUBLIC_DEBUG_MODE=true
EXPO_PUBLIC_LOG_LEVEL=debug
